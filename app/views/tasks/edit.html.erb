<h1>Editing task</h1>

<%= form_for @task  do |f| %>

<% if @task.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@task.errors.count, "error") %> prohibited
        this task from being saved:
      </h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description%>
  </p>
  <p>
    <%= f.label :project_name %><br>
    <%= f.select(:project_name, @project_options)%>
  </p>
  <p>
     <%= f.label :implementer %><br>
     <%= f.select(:implementer, @user_options) %>
   </p>
  <p>
    <%= f.label :status %><br>
    <%= f.select(:status, [['new', 'new'], ['in progress','in progress'], ['done', 'done']]) %>
  </p>


  <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', tasks_path %>
